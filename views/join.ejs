<script>
  $("#btnJoin").on("click", () => {
    $.ajax({
      url: "/registerAjax",
      data: {
        userID: $("#userID").val(),
        userPW: $("#userPW").val(),
      },
      method: "POST",
    }).done((response) => {
      console.log(response);
      if (response.isJoin) {
        //alert("회원가입이 잘 되었습니다.");
        //location.href = "/login";
        location.href = "/success";
      }
    });
  });
</script>
